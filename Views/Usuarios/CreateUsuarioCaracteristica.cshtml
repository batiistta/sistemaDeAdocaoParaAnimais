@model sistemaDeAdocaoParaAnimais.Models.Usuarios

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutDeslogado";

}



<h1 style="text-align: center; margin-top: 30px; ">Cadastro do Usuário</h1>

<form asp-action="CreateUsuarioCaracteristica">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" style="visibility: hidden;">
        <label asp-for="Avatar" class="control-label"></label>
        <input id="photo" asp-for="Avatar" class="form-control" />
        <span asp-validation-for="Avatar" class="text-danger"></span>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Nome" class="control-label"></label>
            <input autocomplete="off" asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Sobrenome" class="control-label"></label>
            <input autocomplete="off" asp-for="Sobrenome" class="form-control" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="NomeSocial" class="control-label"></label>
            <input asp-for="NomeSocial" class="form-control" />
            <span asp-validation-for="NomeSocial" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="CPF" class="control-label"></label>
            <input autocomplete="off" asp-for="CPF" onblur="validarCpf(this.value)" id="cpf" class="form-control" />
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Email" class="control-label"></label>
            <input autocomplete="off" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="ConfirmeEmail" class="control-label"></label>
            <input autocomplete="off" asp-for="ConfirmeEmail" class="form-control" />
            <span asp-validation-for="ConfirmeEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="ConfirmeSenha" class="control-label"></label>
            <input asp-for="ConfirmeSenha" class="form-control" />
            <span asp-validation-for="ConfirmeSenha" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="DtNascimento" class="control-label"></label>
            <input asp-for="DtNascimento" class="form-control" />
            <span asp-validation-for="DtNascimento" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Genero" class="form-label"></label>
            <select asp-for="Genero" class="form-select">
                <option selected>Selecione</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Outros">Outros</option>
            </select>
            <span asp-validation-for="Genero" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Celular" class="control-label"></label>
            <input asp-for="Celular" placeholder="(xx) xxxxx-xxxx" class="form-control" size="20" maxlength="15" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Cep" class="control-label"></label>
            <input name="cep" class="form-control" asp-for="Cep" type="text" id="cep" value="" size="10" maxlength="9"
                onblur="pesquisacep(this.value);" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Rua" class="control-label"></label>
            <input asp-for="Rua" name="rua" type="text" class="form-control" id="rua" size="60" />
            <span asp-validation-for="Rua" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Bairro" class="control-label"></label>
            <input asp-for="Bairro" name="bairro" type="text" id="bairro" class="form-control" size="40" />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Cidade" class="control-label"></label>
            <input asp-for="Cidade" name="cidade" type="text" id="cidade" size="40" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Estado" class="control-label"></label>
            <input asp-for="Estado" name="estado" type="text" id="estado" size="2" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="complemento" class="control-label"></label>
            <input asp-for="complemento" class="form-control" />
            <span asp-validation-for="complemento" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label name="Energia" class="form-label">Nível de energia do pet desejado?</label>
            <select namer="Energia" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="col-md-5">
            <label name="humor" class="form-label">Nível de humor do pet desejado?</label>
            <select name="humor" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label name="apego" class="form-label">Nível de apego do pet desejado?</label>
            <select name="apego" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="col-md-5">
            <label asp-for="Adestramento" class="form-label">Nível de adestramento do pet desejado?</label>
            <select asp-for="Adestramento" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Adestramento" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <label for="formFileMultiple" class="form-label">Escolha sua imagem de perfil</label>
            <input class="form-control" style="width: 400px;" type="file" id="photoInput">
        </div>
    </div> <br>
    <div class="row d-flex justify-content-center">
        <div style="margin-top: -10px;" class="col-md-10">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="TermosCondições" /> @Html.DisplayNameFor(model =>
                model.TermosCondições)
            </label>
        </div>
    </div>
    <div class="col-md-5">
        <input type="submit" value="Criar" class="btn btn-success"
            style="align-items: center; margin-left: 85%; border-radius: 5px; width: 400px; height: 40px;" />
    </div>

</form>
