@model sistemaDeAdocaoParaAnimais.Models.Usuarios


@{
    var animais = ViewBag.pets;
}

@{
    if (animais != null)
    {
        @foreach (var Models in animais)
        {
            <div>
                <div id="esquerda">
                    <img src="@Models.ImagensPet" id="perfil" />
                </div>
                <div id="direita">
                    <span>@Models.Nome</span>
                    <p>@Models.Especie | @Models.Sexo | @Models.Porte | @Models.Cidade | @Models.Estado</p>
                </div>
                <div id="historia">
                    <span>Historia sobre @Models.Nome</span>
                    <br>
                    @Models.Descricao
                </div>
                <button type="submit" class="bnt" onclick="openPopup()">Quero adotar</button>
            </div>
        }
        <div class="popup" id="popup">
            <h2>Contato do Cuidador</h2>
            <p>@Model.Nome</p>
            <p>@Model.Celular</p>
            <p>@Model.Email</p>
            <button type="button" onclick="closePopup()">Fechar</button>
        </div>
    }
}
