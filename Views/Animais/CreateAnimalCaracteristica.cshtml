@model sistemaDeAdocaoParaAnimais.Models.Animal

@{
    ViewData["Title"] = "Create";
    
}

<h1 style="text-align: center; margin-top: 30px; ">Cadastre seu pet</h1>

<form asp-action="CreateAnimalCaracteristica">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" style="visibility: hidden;">
        <label asp-for="FkUsuarios" class="control-label"></label>
        <select asp-for="FkUsuarios" class="form-control"></select>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" style="width: 875px;" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Raca" class="control-label"></label>
            <input asp-for="Raca" style="width: 400px;" class="form-control" />
            <span asp-validation-for="Raca" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Cor" class="control-label"></label>
            <input asp-for="Cor" class="form-control" style="width: 400px;"  type="text" />
            <span asp-validation-for="Cor" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Porte" style="width: 500px;" class="form-label"></label>
            <select asp-for="Porte" style="width: 400px;" class="form-select">
                <option selected>Selecione</option>
                <option value="Pequeno">Pequeno</option>
                <option value="Médio">Médio</option>
                <option value="Grande">Grande</option>
            </select>
            <span asp-validation-for="Porte" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Especie" style="width: 500px;" class="form-label"></label>
            <select asp-for="Especie" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="Cachorro">Cachorro</option>
                <option value="Gato">Gato</option>
            </select>
            <span asp-validation-for="Especie" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
<div class="col-md-5">
            <label asp-for="Estado" class="control-label"></label>
            <select name="estado" id="estado" class="form-select" style="width: 400px;" asp-for="Estado"
                aria-label="Default select example">
                <option selected>Selecione</option>
                <option value="Acre">Acre</option>
                <option value="Alagoas">Alagoas</option>
                <option value="Amapá">Amapá</option>
                <option value="Amazonas">Amazonas</option>
                <option value="Bahia">Bahia</option>
                <option value="Ceará">Ceará</option>
                <option value="Distrito Federal">Distrito Federal</option>
                <option value="Espírito Santo">Espírito Santo</option>
                <option value="Goiás">Goiás</option>
                <option value="Maranhão">Maranhão</option>
                <option value="Mato Grosso">Mato Grosso</option>
                <option value="Mato Grosso do Sul">Mato Grosso do Sul</option>
                <option value="Minas Gerais">Minas Gerais</option>
                <option value="Pará">Pará</option>
                <option value="Paraíba">Paraíba</option>
                <option value="Paraná">Paraná</option>
                <option value="Pernambuco">Pernambuco</option>
                <option value="Piauí">Piauí</option>
                <option value="Rio de Janeiro">Rio de Janeiro</option>
                <option value="Rio Grande do Norte">Rio Grande do Norte</option>
                <option value="Rio Grande do Sul">Rio Grande do Sul</option>
                <option value="Rondônia">Rondônia</option>
                <option value="Roraima">Roraima</option>
                <option value="Santa Catarina">Santa Catarina</option>
                <option value="São Paulo">São Paulo</option>
                <option value="Sergipe">Sergipe</option>
                <option value="Tocantins">Tocantins</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Cidade" class="form-label"></label>
            <input asp-for="Cidade" style="width: 400px;" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label name="energia" style="width: 500px;" class="form-label">Qual o nível de energia do seu pet?</label>
            <select name= "energia" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        
        <div class="col-md-5">
            <label name="humor" style="width: 500px;" class="form-label">Qual o nível de humor do seu pet?</label>
            <select name="humor" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label name="apego" style="width: 500px;" class="form-label">Qual o nível de apego do seu pet?</label>
            <select name="apego" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <div class="col-md-5">
            <label asp-for="Adestramento" style="width: 500px;" class="form-label"></label>
            <select asp-for="Adestramento" style="width: 400px;" class="form-select"
                aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Adestramento" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Vacinado" style="width: 500px;" class="form-label"></label>
            <select asp-for="Vacinado" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="Sim">Sim</option>
                <option value="Não">Não</option>
            </select>
            <span asp-validation-for="Vacinado" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Castrado" style="width: 500px;" class="form-label"></label>
            <select asp-for="Castrado" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="Sim">Sim</option>
                <option value="Não">Não</option>
            </select>
            <span asp-validation-for="Castrado" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="Vermifugado" style="width: 500px;" class="form-label"></label>
            <select asp-for="Vermifugado" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="Sim">Sim</option>
                <option value="Não">Não</option>
            </select>
            <span asp-validation-for="Vermifugado" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Sexo" style="width: 500px;" class="form-label"></label>
            <select asp-for="Sexo" style="width: 400px;" class="form-select" aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="Macho">Macho</option>
                <option value="Fêmea">Fêmea</option>
            </select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <label asp-for="EstadoAdocaoPet" class="form-label"></label>
            <select asp-for="EstadoAdocaoPet" style="width: 400px;" class="form-select"
                aria-label="Default select example">
                <option class="form-label" selected>Selecione</option>
                <option value="Disponível">Disponível</option>
                <option value="Adotado">Adotado</option>
            </select>
            <span asp-validation-for="EstadoAdocaoPet" class="text-danger"></span>
        </div>

        <div class="col-md-5">
            <label for="formFileMultiple" class="form-label">Escolha a foto do seu pet</label>
            <input class="form-control" style="width: 400px;" type="file" id="photoInput">
        </div>
    </div>

    <div class="textArea">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" cols="200" rows="10"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="col-md-4" style="visibility: hidden;">
        <label asp-for="ImagensPet" class="control-label"></label>
        <input asp-for="ImagensPet" id="photo" class="form-control" />
        <span asp-validation-for="ImagensPet" class="text-danger"></span>
    </div>
    <div class="col-md-5">
        <input type="submit" value="Criar" class="btn btn-primary" style="align-items: center; margin-left: 85%; border-radius: 5px; width: 400px; height: 40px;"/>
    </div>
</form>

