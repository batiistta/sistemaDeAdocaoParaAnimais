@model sistemaDeAdocaoParaAnimais.Models.Animal

@{
    Layout = "_LayoutDeslogado";
}


@{
    var animais = ViewBag.pets;
}
@{
    if (animais != null)
    {
        @foreach (var Model in animais)
        {
            <div>    
                <div id="esquerda">
                    <img src="@Model.ImagensPet" id="perfil"/>
                </div>
                <div id="direita">
                    <span>@Model.Nome</span>
                    <p>@Model.Especie | @Model.Sexo | @Model.Porte | @Model.Cidade | @Model.Estado</p> 
                </div>
                <div id="historia">
                    <span>Historia sobre @Model.Nome</span>
                    <br>
                    @Model.Descricao 
                </div>
                <button type="submit" class="bnt">Quero adotar</button>
            </div>   
        }
    }
}