<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - sistemaDeAdocaoParaAnimais</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/sistemaDeAdocaoParaAnimais.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
</head>

<body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="100">

    <header class="header_wrapper">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a href="#" class="navbarIMG">
                    <img src="~/img/logopets.png" style="width: 90px;" alt="">
                   AnimalPets
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="#" class="nav-link">Quem somos</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Quero ajudar</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Parcerias</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Blog</a>
                        </li>
                    </ul>

                </div>
                <a asp-controller="Login" asp-action="Login" style="font-size: 1.3rem; font-family: Roboto; font-weight: 800;" type="button" class="btn btn-outline-light">Entrar</a>
                <a  asp-controller="Usuarios" asp-action="CreateUsuarioCaracteristica" style="font-size: 1.3rem; font-family: Roboto; font-weight: 800;" type="button" class="btn btn-outline-light">Cadastrar</a>
            </div>
        </nav>

        <nav class="navbar-la navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <div class="buttonToggler">
                        <span class="mobile-menu">
                            <div class="line1"></div>
                            <div class="line2"></div>
                            <div class="line3"></div>
                        </span>
                    </div>
                </button>
                <a href="#" class="navbarIMG">
                    <img src="~/img/logopets.png" style="width: 90px;" alt="">
                </a>
                <div class="banAnimal">
                    <a href="#">
                        AnimalPets
                    </a>
                </div>
                <div class="buttonEntrar">
                    <a href="#" type="button" class="btn btn-outline-light">Entrar</a>
                </div>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
                    aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">AnimalPets</h5>
                        <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" href="#">Cadastrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" aria-current="page" href="#">Quem somos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" href="#">Quero ajudar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" href="#">Parcerias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" href="#">Blog</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white">
        <div class="container-fluid pt-5 pb-5" id="divfooter">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="font-weight-bold mb-3">ADOTE</h5> <hr id="hrfooter">
                    <p id="pfooter">Adote com Responsabilidade</p>
                    <p id="pfooter">Quem pode adotar ?</p>
                </div>
                <div class="col-md-4">
                    <h5 class="font-weight-bold mb-3">DIVULGUE UM ANIMAL</h5> <hr id="hrfooter">
                    <p id="pfooter">Cadastre um Animal</p>
                </div>
                 <div class="col-md-4">
                    <h5 class="font-weight-bold mb-3">SOBRE NÓS</h5> <hr id="hrfooter">
                    <p id="pfooter">Fale Conosco</p>
                    <p id="pfooter">Perguntas Frequentes</p>
                    <p id="pfooter">Parceiros</p>
                    <p id="pfooter">Termo de Uso de Política de Privacidade</p>
                </div>
            </div>

            <div id="iconsfooter" class="flex gap-3 mt-16 justify-center">
                <a href="#" target="_blank">
                <img loading="lazy" src="https://www.amigonaosecompra.com.br/images/instagram-1577ddddf7aaefce41fe6e89b4d81de3.png?vsn=d">
                </a>
                <a href="#" target="_blank">
                <img loading="lazy" src="https://www.amigonaosecompra.com.br/images/facebook-42cdb13b597064462896ab0d32096a36.png?vsn=d">
                </a>
                <a href="#" target="_blank">
                <img loading="lazy" src="https://www.amigonaosecompra.com.br/images/youtube-df83385dafd64efd85799e8a2daa2ef0.png?vsn=d">
                </a>
                <a href="#" target="_blank">
                <img loading="lazy" src="https://www.amigonaosecompra.com.br/images/twitter-e2c877a4789b475409a4c93237faca71.png?vsn=d">
                </a>
              </div>

            <div class="flex flex-col mt-10 text-center items-center">      
                <img src="~/img/logopets.png" style="width: 120px;" id="imgfooter">      
            <div class="text-xs mt-3">Todos os direitos reservados.</div>
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>